// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // ‚Üê QUITA EL OUTPUT (usa el predeterminado)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String     @db.VarChar(100)
  activa    Boolean    @default(true)
  tienda_id Int
  Tienda    Tienda     @relation(fields: [tienda_id], references: [id], onUpdate: NoAction)
  Producto  Producto[]
}

model Producto {
  id            Int       @id @default(autoincrement())
  nombre        String    @db.VarChar(100)
  descripcion   String?
  imagen_base64 String?
  precio        Decimal   @db.Decimal(10, 2)
  talla         String?   @db.VarChar(20)
  tipo_genero   String?   @db.VarChar(20)
  stock         Int       @default(0)
  activo        Boolean   @default(true)
  categoria_id  Int
  tienda_id     Int
  created_at    DateTime  @default(now()) @db.Timestamp(6)
  Categoria     Categoria @relation(fields: [categoria_id], references: [id], onUpdate: NoAction)
  Tienda        Tienda    @relation(fields: [tienda_id], references: [id], onUpdate: NoAction)
}

model Tienda {
  id             Int         @id @default(autoincrement())
  nombre         String      @db.VarChar(100)
  descripcion    String?
  logo_url       String?
  ubicacion      String?
  whatsapp       String?     @db.VarChar(20)
  email_contacto String?     @db.VarChar(100)
  estado         Boolean     @default(true)
  created_at     DateTime    @default(now()) @db.Timestamp(6)
  owner_id       Int
  Categoria      Categoria[]
  Producto       Producto[]
  User           User        @relation(fields: [owner_id], references: [id], onUpdate: NoAction)
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  email      String   @unique @db.VarChar(100)
  password   String   @db.VarChar(100)
  role       String   @default("USER") @db.VarChar(20)
  created_at DateTime @default(now()) @db.Timestamp(6)
  Tienda     Tienda[]
}