generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(255)
  role       String?   @default("USER") @db.VarChar(20)
  tienda_id  Int?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  Log        Log[]
  Tienda     Tienda?

  @@index([email], map: "idx_user_email")
  @@index([role], map: "idx_user_role")
  @@index([tienda_id], map: "idx_user_tienda")
}

model Tienda {
  id             Int         @id @default(autoincrement())
  nombre         String      @db.VarChar(100)
  slug           String      @unique @db.VarChar(120)
  descripcion    String?
  logo_url       String?
  ubicacion      String?
  whatsapp       String?     @db.VarChar(20)
  email_contacto String?     @db.VarChar(100)
  estado         Boolean?    @default(true)
  created_at     DateTime?   @default(now()) @db.Timestamp(6)
  owner_id       Int         @unique
  categorias     Categoria[]
  Log            Log[]
  productos      Producto[]
  User           User        @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tienda_owner")

  @@index([slug], map: "idx_tienda_slug")
  @@index([owner_id], map: "idx_tienda_owner")
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String     @db.VarChar(100)
  slug      String     @unique @db.VarChar(120)
  activa    Boolean?   @default(true)
  tienda_id Int
  tienda    Tienda     @relation(fields: [tienda_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_categoria_tienda")
  productos Producto[]

  @@index([slug], map: "idx_categoria_slug")
  @@index([tienda_id], map: "idx_categoria_tienda")
}

model Producto {
  id           Int       @id @default(autoincrement())
  nombre       String    @db.VarChar(100)
  slug         String    @unique @db.VarChar(120)
  descripcion  String?
  imagen_url   String?
  precio       Decimal   @db.Decimal(10, 2)
  talla        String?   @db.VarChar(20)
  tipo_genero  String?   @db.VarChar(20)
  stock        Int?      @default(0)
  activo       Boolean?  @default(true)
  destacado    Boolean?  @default(false)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
  categoria_id Int
  tienda_id    Int
  categoria    Categoria @relation(fields: [categoria_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_producto_categoria")
  tienda       Tienda    @relation(fields: [tienda_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_producto_tienda")

  @@index([categoria_id], map: "idx_producto_categoria")
  @@index([destacado], map: "idx_producto_destacado")
  @@index([slug], map: "idx_producto_slug")
  @@index([tienda_id], map: "idx_producto_tienda")
}

model Log {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  tienda_id  Int?
  accion     String    @db.VarChar(100)
  entidad    String    @db.VarChar(50)
  entidad_id Int?
  detalles   String?
  ip         String?   @db.VarChar(45)
  user_agent String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  Tienda     Tienda?   @relation(fields: [tienda_id], references: [id], onUpdate: NoAction, map: "fk_log_tienda")
  User       User?     @relation(fields: [user_id], references: [id], onUpdate: NoAction, map: "fk_log_user")

  @@index([accion], map: "idx_log_accion")
  @@index([created_at], map: "idx_log_created")
  @@index([tienda_id], map: "idx_log_tienda")
  @@index([user_id], map: "idx_log_user")
}
